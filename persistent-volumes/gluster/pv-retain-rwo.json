{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "gluster"
  },
  "spec": {
    "capacity": {
        "storage": "5Gi"
    },
    "accessModes": [ "ReadWriteOnce" ],
    "glusterfs": {
        "endpoints": "glusterfs-cluster",
        "path": "testvol"
    },
    "persistentVolumeReclaimPolicy": "Retain"
  }
}
