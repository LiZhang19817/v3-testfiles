{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "cephfs"
  },
  "spec": {
    "capacity": {
        "storage": "5Gi"
    },
    "accessModes": [ "ReadWriteOnce" ],
    "cephfs": {
        "monitors": [
                    "192.168.0.130:6789",
                    "192.168.0.131:6789",
                    "192.168.0.132:6789",
                    "192.168.0.147:6789"
         ],
        "user": "admin",
        "secretRef": {
            "name": "ceph-secret"
        },
        "secretFile": "/etc/ceph/admin.secret",
        "readOnly": true
    },
    "persistentVolumeReclaimPolicy": "Default"
  }
}
