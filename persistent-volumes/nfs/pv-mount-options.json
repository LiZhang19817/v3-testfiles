{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "nfs",
    "annotations": {
        "volume.beta.kubernetes.io/mount-options": "ro,nfsvers=3"
    }
  },
  "spec": {
    "capacity": {
        "storage": "1Gi"
    },
    "accessModes": [ "ReadWriteOnce" ],
    "nfs": {
        "path": "/mnt/nfs",
        "server": "127.0.0.1"
    }
  }
}
