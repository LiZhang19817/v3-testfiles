{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "iscsi",
        "labels": {
            "name": "frontendhttp"
        }
    },
    "spec": {
        "containers": [{
            "name": "myfrontend",
            "image": "jhou/hello-openshift",
            "imagePullPolicy": "IfNotPresent",
            "volumeMounts": [{
                "mountPath": "/mnt/iscsi",
                "name": "iscsi"
            }]
        }],
        "volumes": [{
            "name": "iscsi",
            "persistentVolumeClaim": {
                "claimName": "iscsic"
            }
        }]
    }
}
