{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "iscsi",
        "labels": {
            "name": "iscsi"
        }
    },
    "spec": {
        "nodeSelector": {
            "storage": "y"
        },
        "containers": [{
            "name": "myfrontend",
            "image": "aosqe/hello-openshift",
            "imagePullPolicy": "IfNotPresent",
            "securityContext": {
                "privileged": false
            },
            "volumeMounts": [{
                "mountPath": "/mnt/iscsi",
                "name": "iscsi"
            }]
        }],
        "securityContext": {
            "fsGroup": 654321
        },
        "volumes": [{
            "name": "iscsi",
            "persistentVolumeClaim": {
                "claimName": "iscsic"
            }
        }]
    }
}
