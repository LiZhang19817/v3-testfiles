{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "rbd"
    },
    "spec": {
        "containers": [
            {
                "name": "rbd",
                "image": "aosqe/hello-openshift",
                "volumeMounts": [
                    {
                        "mountPath": "/mnt/rbd",
                        "name": "rbdpd"
                    }
                ]
            }
        ],
        "securityContext": {
            "runAsUser": 1000160000,
            "fsGroup": 123456,
            "seLinuxOptions": {
                "level": "s0"
            }
        },
        "volumes": [
            {
                "name": "rbdpd",
                "rbd": {
                    "monitors": ["172.16.120.89:6789"],
                    "pool": "rbd",
                    "image": "foo",
                    "user": "admin",
                    "keyring": "/etc/ceph/keyring",
                    "secretRef": {
                        "name": "cephrbd-secret",
                        "namespace": "default"
                    },
                    "fsType": "ext4",
                    "readOnly": false
                }
            }
        ]
    }
}
