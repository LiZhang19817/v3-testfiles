{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "cinderpd",
        "labels": {
            "name": "frontendhttp"
        }
    },
    "spec": {
        "containers": [{
            "name": "myfrontend",
            "image": "aosqe/hello-openshift",
            "imagePullPolicy": "IfNotPresent",
            "ports": [{
                "containerPort": 80,
                "name": "http-server"
            }],
            "volumeMounts": [{
                "mountPath": "/mnt/cinder",
                "name": "pvol"
            }]
        }],
        "securityContext": {
            "fsGroup": 123456
        },
        "volumes": [{
            "name": "pvol",
            "persistentVolumeClaim": {
                "claimName": "cinderc"
            }
        }]
    }
}
