{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "ceph"
    },
    "spec": {
		"initContainers": [{
			"name": "init",
			"image": "aosqe/hello-openshift",
			"command": ["sh", "-c", "mkdir /mnt/rbd/subpath; cp /hello /mnt/rbd/subpath/hello"],
			"volumeMounts": [{
				"name": "rbd",
				"mountPath": "/mnt/rbd"
			}]
		}],
        "containers": [{
            "name": "ceph",
            "image": "aosqe/hello-openshift",
            "imagePullPolicy": "IfNotPresent",
            "volumeMounts": [{
                "mountPath": "/mnt/rbd",
                "subpath": "subpath",
                "name": "rbd"
            }]
        }],
        "volumes": [{
            "name": "rbd",
            "persistentVolumeClaim": {
                "claimName": "rbdc"
            }
        }]
    }
}
