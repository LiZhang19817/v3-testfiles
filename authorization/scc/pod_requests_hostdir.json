{
  "apiVersion":"v1",
  "kind": "Pod",
  "metadata": {
    "name": "disk-pod",
    "labels": {
      "name": "disk-pod"
    }
  },
  "spec": {
    "containers": [{
      "name": "disk-pod",
      "image": "bmeng/hello-openshift",
      "volumeMounts" : [
                {
                "name":"testvol",
                "mountPath" : "/tmp/testdir"
                }
               ]
    }],
      "volumes": [{
                "name" : "testvol",
                "source" : {
                        "hostDir": {
                                "path": "/tmp/testdir"
                                   }
                           }
                }]

  }
}

