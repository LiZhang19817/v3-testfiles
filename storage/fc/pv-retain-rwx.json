{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "fibrechannel"
  },
  "spec": {
    "capacity": {
        "storage": "5Gi"
    },
    "accessModes": [ "ReadWriteMany" ],
    "fc": {
        "targetWWNS": [ "500a0981891b8dc5", "500a0981991b8dc5"],
        "lun": 2,
        "fsType": "ext4"
    },
    "persistentVolumeReclaimPolicy": "Retain"
  }
}
