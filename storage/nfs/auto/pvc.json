{
    "apiVersion": "v1",
    "kind": "PersistentVolumeClaim",
    "metadata": {
        "name": "nfsc"
    },
    "spec": {
        "accessModes": [ "ReadWriteMany" ],
        "volumeName": "nfs",
        "resources": {
            "requests": {
                "storage": "5Gi"
            }
        }
    }
}
