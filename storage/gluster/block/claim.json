{
    "apiVersion": "v1",
    "kind": "PersistentVolumeClaim",
    "metadata": {
        "name": "glusterc"
    },
    "spec": {
        "accessModes": [ "ReadWriteOnce" ],
        "volumeMode": "Block",
        "resources": {
            "requests": {
                "storage": "1Gi"
            }
        }
    }
}
