{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "rbd"
  },
  "spec": {
    "capacity": {
        "storage": "1Gi"
    },
    "accessModes": [ "ReadWriteOnce" ],
    "volumeMode": "Block",
    "rbd": {
        "monitors": ["xxx"],
        "pool": "rbd",
        "image": "disk01",
        "user": "admin",
        "secretRef": { "name": "ceph-secret" },
        "keyring": "/etc/ceph/keyring",
        "fsType": "ext4",
        "features": "layering",
        "readOnly": false
    },
    "persistentVolumeReclaimPolicy": "Retain"
  }
}
