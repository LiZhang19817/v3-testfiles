{
    "apiVersion": "v1",
    "kind": "PersistentVolumeClaim",
    "metadata": {
        "name": "rbdc"
    },
    "spec": {
        "accessModes": [ "ReadWriteOnce" ],
        "volumeMode": "Block",
        "resources": {
            "requests": {
                "storage": "1Gi"
            }
        },
        "storageClassName": "cephrbdprovisioner"
    }
}
