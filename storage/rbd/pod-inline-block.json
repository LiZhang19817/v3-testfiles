{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "rbd"
    },
    "spec": {
        "containers": [
            {
                "name": "rbd",
                "image": "aosqe/hello-openshift",
                "volumeDevices": [
                    {
                        "devicePath": "/dev/rbd0",
                        "name": "rbdpd"
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "rbdpd",
                "rbd": {
                    "monitors": ["xxx"],
                    "pool": "rbd",
                    "image": "image",
                    "user": "admin",
                    "secretRef": {
                        "name": "cephrbd-user-secret"
                    },
                    "readOnly": false
                }
            }
        ]
    }
}
