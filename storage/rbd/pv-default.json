{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "rbd"
  },
  "spec": {
    "capacity": {
        "storage": "5Gi"
    },
    "accessModes": [ "ReadOnlyMany" ],
    "rbd": {
        "monitors": [
                    "192.168.0.130:6789",
                    "192.168.0.131:6789",
                    "192.168.0.132:6789",
                    "192.168.0.147:6789"
         ],
	"pool": "rbd",
        "image": "disk01",
        "user": "admin",
        "secretRef": { "name": "cephrbd-secret" },
	"keyring": "/etc/ceph/keyring",
	"fsType": "ext4",
        "readOnly": false
    },
    "persistentVolumeReclaimPolicy": "Default"
  }
}
