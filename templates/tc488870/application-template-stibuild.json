{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "python-sample-sti",
    "creationTimestamp": null,
    "annotations": {
      "description": "This example shows how to create a simple python application in openshift origin v3",
      "iconClass": "icon-python",
      "tags": "instant-app,python,mysql"
    }
  },
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "python-sample-sti",
        "creationTimestamp": null
      },
      "spec": {"dockerImageRepository": ""},
      "status": {
        "dockerImageRepository": "docker.io/aosqe/python-sample-sti"
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "python-33-centos7-sti",
        "creationTimestamp": null
      },
      "spec": {
        "dockerImageRepository": "openshift/python-33-centos7"
      },
      "status": {
        "dockerImageRepository": ""
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "python-sample-build-sti",
        "creationTimestamp": null,
        "labels": {
          "name": "python-sample-build-sti"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "GitHub",
            "github": {
              "secret": "secret101"
            }
          },
          {
            "type": "Generic",
            "generic": {
              "secret": "secret101"
            }
          },
          {
            "type": "ImageChange",
            "imageChange": {}
          },
          {
            "type": "ConfigChange"
          }
        ],
        "source": {
          "type": "Git",
          "git": {
            "uri": "https://github.com/openshift/sti-python"
          },
          "contextDir": "3.3/test/standalone-test-app"
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "name": "python-33-centos7-sti:latest"
            }
          }
        },
        "output": {
          "to": {
            "kind": "DockerImage",
            "name": "docker.io/aosqe/python-sample-sti:${OUTPUT_IMAGE_TAG}"
          },
          "pushSecret":{
             "name":"sec-push"
          }
        },
        "resources": {}
      },
      "status": {
        "lastVersion": 0
      }
    }
  ],
  "parameters": [
    {
      "name": "OUTPUT_IMAGE_TAG",
      "description": "output image tag name",
      "required": true
    }
  ],
  "labels": {
    "template": "application-template-stibuild"
  }
}
